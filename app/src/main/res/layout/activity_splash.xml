<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="abpl.android.com.abpl.activity.SplashActivity">
    <abpl.android.com.abpl.splashview.ParticleView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_color"
        pv:pv_background_color="@color/theme_color"
        pv:pv_host_text="Coca"
        pv:pv_particle_text="Cola"
        pv:pv_particle_text_size="24sp"
        pv:pv_text_color="#FFF"
        pv:pv_text_anim_time="2000"
        pv:pv_spread_anim_time="1000"
        pv:pv_host_text_anim_time="2000"

        />
</RelativeLayout>
